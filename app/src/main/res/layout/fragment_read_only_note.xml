<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ReadOnlyNoteFragment">


    <TextView
        android:id="@+id/tvTitleFrgReadOnly"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:padding="6dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"

        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvDateFrgReadOnly"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Note Title" />

    <TextView
        android:id="@+id/tvDateFrgReadOnly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:padding="6dp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvTitleFrgReadOnly"
        tools:text="2017/5/2 23:10" />

    <TextView
        android:id="@+id/tvShowNoteValueFrgReadOnly"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/shape_bg_et_2"
        android:padding="6dp"
        android:paddingStart="6dp"
        android:paddingEnd="4dp"
        android:text="TextView"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tvTitleFrgReadOnly"
        app:layout_constraintStart_toStartOf="@+id/tvDateFrgReadOnly"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleFrgReadOnly" />
</androidx.constraintlayout.widget.ConstraintLayout>